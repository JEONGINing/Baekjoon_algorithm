/*

https://www.acmicpc.net/problem/11399

백준 온라인 저지 11399번 문제: ATM

*/

#include <stdio.h>
#include <stdlib.h>

int compare(const void *a, const void *b);

int main()
{
    int n,i,j;
    int sum, total = 0;
    int time[1000] = {};
    
    scanf("%d",&n);
    for(i=0; i<n; i++)
        scanf("%d",&time[i]);
    
    qsort(time,n,sizeof(int),compare); // 누적 합의 최솟값: 오름차순 정렬
    
    for(i=0; i<n; i++)
    {
        sum = 0;
        for(j=0; j<=i; j++)
        {
            sum += time[j];
        }
        total += sum;
    }
    
    printf("%d",total);
    return 0;
}

int compare(const void *a, const void *b)
{
    return *(int *)a - *(int *)b;
}
